:root {
  --primary-color: rgba(255, 255, 255, 0.201);
  --second-color: rgba(16, 177, 201, 0.789);
}

body {
    color: aliceblue;
    background-color: rgba(3, 3, 27, 0.914);
    font-family: sans-serif;
}

html {
    scroll-behavior: smooth;
}

.header_nav ul {
    display: flex;
    gap: 1.9em;
    justify-content: center;
    list-style: none;
    padding: .2em;
    flex-wrap: wrap;
}

.header_nav a {
    text-decoration: none;
    text-transform: uppercase;
    color: aliceblue;
    padding: .6em;
    border-radius: 20em;
}

.header_nav a:hover {
    background-color:var(--primary-color);
}

.header_nav {
    background-color: rgba(27, 25, 25, 0.81);
    margin: 0 30em;
    border: solid 1px black;
    border-radius: 20em;
    margin-top: 1em ;
}


/*///////////////// aqui acaba o header e comaça o main_parte um///////////////*/

.parte_1 {
    display: flex;
    flex-wrap: wrap;
    margin: 8em;
    justify-content: center;
    letter-spacing: 3px;
    line-height: 1em;
    padding: 5em 0;

}

.parte_1 img {
    width: 150px;
    height: 150px;
    border-radius: 80%;
    object-fit: cover;
    border: 3px solid var(--primary-color);
}

.inicio_color {
    padding: 0 5em ;
}

.inicio_color h1 {
    color: var(--second-color);
    text-transform: uppercase;
}

.inicio_color h2 {
    text-transform: uppercase;
}

.inicio_color p {
    color: black;
    background-color: rgba(53, 83, 236, 0.692);
    width: auto;
    max-width: 21%;
    padding: .6em 1em;
    border-radius: 10em;
    font-weight: bold;
    font-size: .9em;
}

.inicio_color p:hover {
    transform: scale(1.05);
}

.git_link a{
    text-decoration: none;
    color: white;
    display: flex;
    border: solid 1px;
    border-radius: 20em;
    padding: .7em;
}

.git_link {
    display: flex;
    gap: 1em;
    flex-wrap: wrap;
}

.git_link a:hover{
    color: black;
    background-color: white;
}

/*///////////////////////////////aqui começa o a segunda parte /////*/

.sobre_mim {
    justify-content: center;
    text-align: center;
    box-sizing: border-box;
    margin: 13em 20em;
}

.sobre_mim p {
    letter-spacing: .1em;
    line-height: 1.5em;
}

/*///////////////////////////////aqui começa o a terceira parte /////*/

.habilidades {
    display: flex;
    margin: 2em 27em;
    max-width: 100%;
    gap: 2.3em;
    justify-content: center;
    flex-wrap: wrap;
}
.parte_3 h1 {
    text-align: center;
}
.icones {
        background-color: rgba(27, 25, 25, 0.81);
        justify-content: center;
        text-align: center;
        padding: .1em 2em;
        border-radius: 3em 0 0;
        border-bottom: solid 3px;
}

.icones i {
    font-size: 3em;
    padding: .1em 0;
    color: darkblue;

}

.icones:hover {
    transform: scale(1.09);
    cursor: pointer;
}

.devicon-html5-plain, .devicon-css3-plain, .devicon-typescript-plain, .devicon-javascript-plain {
    color: darkblue;
    padding: .2em 0;

}

/*///////////////////////////////aqui começa o a quarta parte /////*/


.mae_projetos {
    display: flex;
    gap: 5em;
    max-width: 100em;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 1em;
}

.parte_4 h1 {
    text-align: center;
    margin-top: 9em;
    padding: 2em;
}

.projetos img {
    width: 100%;
    max-width: 28.4em;
}

.projetos figcaption {
    text-align: center;
    background-color: rgba(0, 0, 0, 0.605);
    margin: -.3em 0;
    padding: .5em;
}

.projetos a {
    text-decoration: none;
    color: white;
    font-weight: bold;
}

.projetos:hover {
    transform: scale(1.09);
}

/*///////////////////////////////aqui começa o a quinta parte /////*/

.contato { 
    display: flex;
    justify-content: center;
    gap: 5em;
    flex-wrap: wrap; /* permite quebrar linha no mobile */
    margin: 15em 0;
    text-align: center;
}

.item {
    display: flex;
    flex-direction: column; /* ícone em cima, texto embaixo */
    align-items: center;
}


.item:hover {
    transform: scale(1.09);
    cursor: pointer;
}
.icone-adress {
    gap: 2em;
    margin: 1rem;
    text-align: center;

}

.icone-adress .fas {
    color: darkblue;
    background-color: black;
    font-size: 1em;
    width: 1em;
    height: 1em;
    padding: 1em;
    border-radius: 20em;
}
.conte h2, h3{
    font-size: 1em;
}

footer {
    background-color: rgb(2, 2, 2, .5);
    padding: 1em;
    text-align: center;
}


@media (max-width: 668px) {
    /* Tablets pequenos e celulares grandes */

    nav {
        margin: 0;
    }
    .header_nav {
    display: inline;
    justify-content: center;
    }

    .header_nav ul {
    gap: 2.7em; 
    margin: 0;
    padding: 0;
    }

/*///////////////// aqui acaba o header e comaça o main_parte um///////////////*/

    .parte_1 {
        padding: 0;
        margin: 4em auto;
      }

    .parte_1 img {
        width: 9em;
        height: 9em;
    }

    .inicio_color h2 {
        font-size: 1.3em;
        line-height: 1.3em;
    }

    .inicio_color h1 {
        line-height: 1em;
    }

    .inicio_color p {
        max-width: 11em;
        font-size: 1em;
        padding: 1em;
    }

    /*///////////////////////////////aqui começa o a segunda parte /////*/

    .sobre_mim {
        margin: .1em;
        padding-bottom: 2em;
    }

/*///////////////////////////////aqui começa o a terceira parte /////*/

    .habilidades {
        margin: .2em;
        padding-top: 1em;
    }   
    .parte_3 {
        margin-top: 5em;
        margin-bottom: -10em;
    }

/*///////////////////////////////aqui começa o a quarta parte /////*/


     .parte_4 h1 {
        padding: 1em 0;
     }
    .mae_projetos{ 
        display: flex;
      }

    .projetos {
        width: 2em;
        display: flex;
        margin-left: -2em;
        padding-right: 7em;
    }

    .projetos img {
        width: 11em;
    }

/*///////////////////////////////aqui começa o contato /////*/


  .contato {
    display: flex;
    flex-direction: column; /* ícones em coluna no mobile */
    align-items: center;
    gap: 3em;
    width: 100%;
    margin: 0 auto;
    padding: 4em 0;
    text-align: center;
  }

  .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1em;
  }

  .conte {
    margin-top: 0;
    padding: 0.5em;
  }
}
